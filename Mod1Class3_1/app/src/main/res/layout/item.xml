<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="@dimen/item"
    android:layout_height="match_parent">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/item_iv_imagen"
        android:layout_width="@dimen/item"
        android:layout_height="@dimen/item"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        fresco:placeholderImage="@drawable/local"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blanco">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/item_tv_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sdfsdfsdf"
                />
            <TextView
                android:id="@+id/item_tv_subtitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sfsdfsf"/>
            <TextView
                android:id="@+id/item_tv_texto_uno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="texto 1"/>
            <TextView
                android:id="@+id/item_tv_texto_dos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="texto 222222"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom|right">
            <TextView
                android:id="@+id/item_tv_precio_uno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$12"/>
            <TextView
                android:id="@+id/item_tv_precio_dos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/precioDos"
                android:text="$56"
                />
        </LinearLayout>

    </FrameLayout>


</LinearLayout>