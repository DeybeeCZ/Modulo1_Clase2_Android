<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sgd_iv_imagen"
        android:layout_width="@dimen/item"
        android:layout_height="@dimen/item"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        fresco:placeholderImage="@drawable/local"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/trans"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sgd_lblTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blanco"/>
        <TextView
            android:id="@+id/sgd_lblSubtitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blanco"/>
        <TextView
            android:id="@+id/sgd_lblTextoUno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blanco"/>
        <TextView
            android:id="@+id/sgd_lblTextoDos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blanco"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom|right">

        <TextView
            android:id="@+id/sgd_lblPrecioUno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blanco"/>

        <TextView
            android:id="@+id/sgd_lblPrecioDos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blanco"/>
    </LinearLayout>
</FrameLayout>