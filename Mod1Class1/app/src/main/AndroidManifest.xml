<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.joanachavez.mod1class1"
    android:versionName="1.0"
    android:versionCode="1">
    <!-- En la play store el version name es la version que podrá visualizar
    el usuario mientras que el version code es la versión interna que manejara -->
    <uses-sdk
        android:minSdkVersion="14"
        android:maxSdkVersion="23"
        android:targetSdkVersion="23" />
    <!-- el targetSdkVersion de preferencia debe ser igual al maxSdkVersion -->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <!-- Activities
        Servicios
        Providers
        -->
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
