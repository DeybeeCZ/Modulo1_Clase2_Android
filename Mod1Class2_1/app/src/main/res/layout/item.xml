<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:padding="@dimen/padding_item"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/lado_imagen"
            android:layout_height="@dimen/lado_imagen"
            android:id="@+id/ivImagen"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_margin="@dimen/margin_layout"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/item_lbl_TextoUno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/negro"/>

            <TextView
                android:id="@+id/item_lbl_TextoDos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/negro"/>

            <TextView
                android:id="@+id/item_lbl_TextoTres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/negro"
                />

        </LinearLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/item_lbl_TextoCuatro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:textColor="@color/negro"/>

</FrameLayout>